{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "dependencies"
  ],
  "rangeStrategy": "bump",
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "automerge": false,
  "packageRules": [
    {
      "matchManagers": [
        "gomod"
      ],
      "groupName": "Go dependencies"
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "GitHub Actions"
    }
  ]
}
